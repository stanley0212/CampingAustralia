<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.PostActivity">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="46dp"
                    android:layout_toStartOf="@+id/post"
                    android:layout_toEndOf="@+id/cancel"
                    android:fontFamily="@font/deathstar"
                    android:padding="8dp"
                    android:text="Camping Now"
                    android:textColor="#00bfff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/post"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/campsite_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profile_image"
            android:src="@drawable/default_user"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postinfo"
        android:orientation="vertical"
        android:layout_below="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="20dp"/>

            <Spinner
                android:id="@+id/spinner_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:entries="@array/spinner_sub"
                android:spinnerMode="dialog"
                android:layout_gravity="center"/>

        </LinearLayout>



        <EditText
            android:id="@+id/post_title"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:hint="@string/please_enter_the_title"/>
        <EditText
            android:id="@+id/post_description"
            android:padding="8dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_enter_the_description"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/postinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_show"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_added"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_insert_photo_black_24dp"/>

    </LinearLayout>

</RelativeLayout>